<div class="d-flex justify-content-between">
  <h1><%= @restaurant.name %></h1>
  <%= link_to "Create a review", new_restaurant_review_path(@restaurant), class: "nav-link btn btn-outline-secondary m-2"%>
</div>

<ul class="list-group mb-4">
    <li class="list-group-item">🏠 : <%= @restaurant.address %></li>
    <li class="list-group-item">☏ : <%= @restaurant.phone_number %></li>
    <li class="list-group-item">Category : <%= @restaurant.category %></li>
</ul>

<h3>Reviews :</h3>

<ul class="list-group mb-4">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item d-flex justify-content-between align-items-center text-wrap">
      <%= review.content %>
      <span class="badge align-self-start"><%= '⭐️'*review.rating %></li></span>
  <% end %>
    </ul>


